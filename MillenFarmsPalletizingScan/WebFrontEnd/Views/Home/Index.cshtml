@model IEnumerable<Model.Pallet>

@{
    ViewBag.Title = "Home";
}
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PalletID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PalletID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink("Scan", "Scan", new { id = item.PalletID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PalletID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

    </table>
}
else
{
    <div class="text-center">
        <h2>There are currently no pallets being loaded.</h2>
    </div>
}