@model IEnumerable<Model.Shipment>

@{
    ViewBag.Title = "Shipments";
}
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>

@if (Model.Count() == 0)
{
    <h1>There are currently no open shipments.</h1>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrailerNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrailerNo)
        </td>
        <td>
            @Html.ActionLink("Scan Shipment", "Scan", new { id = item.ShipmentID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.ShipmentID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
}