<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Millen Farms", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <img src="~/content/images/advatek systems.png" style="width:30%;height:auto;" />
            <br /><br />
            <p>Copyright &copy; @DateTime.Now.Year - Advatek Systems, Moncton, New Brunswick</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
